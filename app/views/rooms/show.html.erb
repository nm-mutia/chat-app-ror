<h1><%= @room.name %></h1>

<div data-channel-subscribe="room" data-room-id="<%= @room.id %>">
    <% @room_messages.each do |room_message| %>
        <div>
            <p><%= room_message.message %></p>
            <small><%= room_message.created_at %></small>
        </div>
  <% end %>
</div>

<div>
    <%= form_with model: @room_message, remote: true do |form| %>
        <div>
            <%= form.text_field :message,
                autocomplete: "off",
                placeholder: "Type here ... "
            %>
            <%= form.submit "Send" %>
        </div>

        <%= form.hidden_field :room_id %>
    <% end %>
</div>



<div class="d-none" data-role="message-template">
  <div class="chat-message-container">
    <div class="row no-gutters">

      <div class="col">
        <div class="message-content">
          <p class="mb-1" data-role="message-text"></p>
          <div class="text-right">
            <small data-role="message-date"></small>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>