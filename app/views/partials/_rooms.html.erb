<div class="card-body">
  <ul class="list-group list-group-flush">
    <% if @rooms.present? %>
      <% @rooms.each do |room| %>
        <div class="row list-group-item">
          <%= link_to room.name, room_path(room.id), class: "room-item col-sm-8" %>
          <%= link_to room_path(room.id),
              method: :delete,
              data: { confirm: "Are you sure you want to delete this room?" },
              class: "room-item col-sm-4" do
          %>
            <% fa_icon "trash" %>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <li class="list-group-item">There are no rooms</li>
    <% end %>
  </ul>
</div>